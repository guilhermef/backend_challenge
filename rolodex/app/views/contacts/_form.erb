<% semantic_nested_form_for @contact, :remote => true, :formart => :partial do |f| %>
  <% f.inputs do %>
    <%= f.input :first_name %>
    <%= f.input :middle_name %>
    <%= f.input :last_name %>
  <% end %>
  <h2>Numbers:</h2>
  <div id="phone_numbers">
    <%= f.fields_for :phone_numbers %>
    <%= f.link_to_add 'add number', :phone_numbers %>
  </div>
  <h2>Addresses:</h2>
  <div id="addresses">
    <%= f.fields_for :addresses %>
    <%= f.link_to_add 'add address', :addresses %>
  </div>
  
  
  <% f.buttons do %>
    <%= f.commit_button %>
  <% end %>
<% end %>
